pipeline {
    agent none
    stages {
    stage ('BUILD') {
    agent {label 'slave_1'}
    steps {
    echo "this is build stage"
    }
    }
    stage ('TEST') {
      agent {label 'slave_2'}
    steps {
    echo "this is TEST stage"
    }
    }
    stage ('DEPLOY') {
      agent {label 'build-in node'}
    steps {
    echo "this is deploy stage"
    }
    }
}

}
