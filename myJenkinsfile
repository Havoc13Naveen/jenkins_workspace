pipeline {
    agent none
      stages {
        stage('BUILD PARALLEL') {
          parallel {
            stage ('build 1') {
          agent { label 'master' }
      steps {
        echo 'this is build stage'
      }
        }
        stage ('build 2') {
          agent { label 'slave_2'}
          step {
            echo "hello world"
          }
        }
          }
        }
        stage('TEST PARALLEL') {
      parallel {
        stage(' test1') {
          steps {
            echo 'this is TEST stage'
          }
        }
        stage(' test2') {
          steps {
            echo 'this is TEST stage'
          }
        }
      }
        }

    stage('DEPLOY') {
      agent { label 'master' }
      steps {
        echo 'this is deploy stage'
      }
    }
      }
}
